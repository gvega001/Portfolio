<!-- Chatbot Container -->
@if (showChatbot)
{
    <div class="chatbot-container">
        <div class="chatbot-header">
            <span>Chatbot</span>
            <button class="btn btn-sm btn-light" @onclick="ToggleChatbot">
                <i class="fas fa-times"></i>
