@page "/about"

<PageTitle>About</PageTitle>

<!-- FontAwesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<!-- Custom Styles for Enhanced Look -->
<style>
    /* Hero Section Enhancements */
    .hero-section {
        background: linear-gradient(135deg, #6366F1, #A78BFA);
        color: #fff;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
    }

        .hero-section h1 {
            animation: fadeInDown 1s ease-out;
        }

        .hero-section p {
            animation: fadeInUp 1s ease-out;
        }
    @@keyframes fadeInDown {
        from

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Card Enhancements */
    .card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 0 20px rgba(0,0,0,0.15);
        }

    /* Button Enhancements */
    .btn {
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
        }
</style>

<!-- Hero Section -->
<div class="hero-section d-flex align-items-center text-center text-white mb-5"
     style="min-height: 40vh;">
    <div class="container">
        <h1 class="display-3 fw-bold"><i class="fas fa-user"></i> About Me</h1>
        <p class="lead mt-3">A deep dive into my passion, skills, and tech journey.</p>
    </div>
</div>

<!-- Skills & Experience Section -->
<div class="container my-5">
    <div class="row row-cols-1 row-cols-md-2 g-4">

        <!-- 1. About Me -->
        <div class="col">
            <div class="card h-100 border border-2 border-secondary shadow-sm"
                 style="transition: transform 0.3s ease-in-out;"
                 onmouseover="this.style.transform='scale(1.02)'"
                 onmouseout="this.style.transform='scale(1)'">
                <div class="card-body">
                    <h2 class="card-title fw-bold">
                        <i class="fas fa-user me-2"></i> Who am I?
                    </h2>
                    <p>
                        Hello! I’m <strong>Gabriel Vega</strong>, a dedicated
                        <strong>software developer</strong> and technology enthusiast
                        with over <strong>20 years of professional experience</strong>—much
                        of it spent at the intersection of <strong>education</strong> and
                        <strong>technology</strong>. While I’ve taught programming and math
                        in classroom settings, my true passion lies in
                        <strong>innovating</strong>, <strong>building</strong>, and
                        <strong>delivering</strong> robust software solutions.
                    </p>
                </div>
            </div>
        </div>

        <!-- 2. My Technical Toolkit -->
        <div class="col">
            <div class="card h-100 border border-2 border-secondary shadow-sm"
                 style="transition: transform 0.3s ease-in-out;"
                 onmouseover="this.style.transform='scale(1.02)'"
                 onmouseout="this.style.transform='scale(1)'">
                <div class="card-body">
                    <h2 class="card-title fw-bold">
                        <i class="fas fa-laptop-code me-2"></i> My Technical Toolkit
                    </h2>
                    <ul class="fa-ul">
                        <li>
                            <span class="fa-li"><i class="fas fa-circle"></i></span>
                            <strong>Programming:</strong> Java, C, C#, C++, Python
                        </li>
                        <li>
                            <span class="fa-li"><i class="fas fa-circle"></i></span>
                            <strong>Web &amp; Cloud:</strong> HTML, CSS, JavaScript, SQL, Azure
                        </li>
                        <li>
                            <span class="fa-li"><i class="fas fa-circle"></i></span>
                            <strong>Frameworks:</strong> .NET MAUI, Blazor, ASP.NET Core
                        </li>
                        <li>
                            <span class="fa-li"><i class="fas fa-circle"></i></span>
                            <strong>DevOps:</strong> Docker, Kubernetes, GitHub
                        </li>
                        <li>
                            <span class="fa-li"><i class="fas fa-circle"></i></span>
                            <strong>Hardware:</strong> Arduino, VEX, Linkbot
                        </li>
                    </ul>

                    <!-- Dynamic Progress Bars -->
                    @foreach (var skill in skills)
                    {
                        <div class="progress mb-2">
                            <div class="progress-bar bg-info" role="progressbar" style="width: @skill.Value%;">
                                @skill.Key (@skill.Value%)
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- 3. Bridging Education & Tech -->
        <div class="col">
            <div class="card h-100 border border-2 border-secondary shadow-sm"
                 style="transition: transform 0.3s ease-in-out;"
                 onmouseover="this.style.transform='scale(1.02)'"
                 onmouseout="this.style.transform='scale(1)'">
                <div class="card-body">
                    <h2 class="card-title fw-bold">
                        <i class="fas fa-chalkboard-teacher me-2"></i> Bridging Education &amp; Tech
                    </h2>
                    <p>
                        My teaching background honed my <strong>communication</strong> and
                        <strong>mentorship</strong> skills, giving me a unique approach to
                        software development. Some highlights include:
                    </p>
                    <ul class="fa-ul">
                        <li>
                            <span class="fa-li"><i class="fas fa-circle"></i></span>
                            Developing <em>C-based</em> and <em>C#</em> robotics programs
                        </li>
                        <li>
                            <span class="fa-li"><i class="fas fa-circle"></i></span>
                            Implementing <em>Docker</em> for streamlined deployments
                        </li>
                        <li>
                            <span class="fa-li"><i class="fas fa-circle"></i></span>
                            Mentoring teams on <em>agile methodologies</em> and CI/CD
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- 4. Why I’m Excited About Tech -->
        <div class="col">
            <div class="card h-100 border border-2 border-secondary shadow-sm"
                 style="transition: transform 0.3s ease-in-out;"
                 onmouseover="this.style.transform='scale(1.02)'"
                 onmouseout="this.style.transform='scale(1)'">
                <div class="card-body">
                    <h2 class="card-title fw-bold">
                        <i class="fas fa-lightbulb me-2"></i> Why I’m Excited About Tech
                    </h2>
                    <ul class="fa-ul">
                        <li>
                            <span class="fa-li"><i class="fas fa-circle"></i></span>
                            Building scalable <em>.NET</em> applications
                        </li>
                        <li>
                            <span class="fa-li"><i class="fas fa-circle"></i></span>
                            Exploring <em>AI</em> and data-driven projects
                        </li>
                        <li>
                            <span class="fa-li"><i class="fas fa-circle"></i></span>
                            Shaping innovative platforms
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- 5. Beyond the Code -->
        <div class="col">
            <div class="card h-100 border border-2 border-secondary shadow-sm"
                 style="transition: transform 0.3s ease-in-out;"
                 onmouseover="this.style.transform='scale(1.02)'"
                 onmouseout="this.style.transform='scale(1)'">
                <div class="card-body">
                    <h2 class="card-title fw-bold">
                        <i class="fas fa-code me-2"></i> Beyond the Code
                    </h2>
                    <p>Outside of coding, I enjoy:</p>
                    <ul class="fa-ul">
                        <li>
                            <span class="fa-li"><i class="fas fa-circle"></i></span>
                            Experimenting with new <em>IoT</em> or robotics projects
                        </li>
                        <li>
                            <span class="fa-li"><i class="fas fa-circle"></i></span>
                            Reading about <em>DevOps</em> advancements
                        </li>
                        <li>
                            <span class="fa-li"><i class="fas fa-circle"></i></span>
                            Sharing knowledge with students &amp; developers
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- 6. AI Chatbot About Me -->
        <div class="col">
            <div class="card h-100 border border-2 border-secondary shadow-sm"
                 style="transition: transform 0.3s ease-in-out;"
                 onmouseover="this.style.transform='scale(1.02)'"
                 onmouseout="this.style.transform='scale(1)'">
                <div class="card-body text-center">
                    <h2 class="card-title fw-bold">
                        <i class="fas fa-comments me-2"></i> Ask Me Anything
                    </h2>
                    <button class="btn btn-primary" @onclick="ToggleChatbot" style="transition: background-color 0.3s ease;">
                        <i class="fas fa-comments"></i> @(showChatbot ? "Close AI Chat" : "Chat with My AI")
                    </button>
                </div>
            </div>
        </div>

        <!-- 7. Live Coding Console -->
        <div class="col">
            <div class="card h-100 border border-2 border-secondary shadow-sm"
                 style="transition: transform 0.3s ease-in-out;"
                 onmouseover="this.style.transform='scale(1.02)'"
                 onmouseout="this.style.transform='scale(1)'">
                <div class="card-body">
                    <h2 class="card-title fw-bold">
                        <i class="fas fa-terminal me-2"></i> Live C# Console
                    </h2>
                    <input type="text" class="form-control mb-2" @bind="userCode"
                           placeholder="Type C# code..."
                           style="border: 1px solid #ced4da; padding: 0.5rem;" />
                    <button class="btn btn-success" @onclick="RunCode" style="transition: background-color 0.3s ease;">
                        <i class="fas fa-play"></i> Run
                    </button>
                    <pre class="mt-3 p-2 bg-light border"
                         style="font-family: 'Courier New', monospace;">
                        @codeOutput</pre>
                </div>
            </div>
        </div>

        <!-- 8. Random Quote Generator -->
        <div class="col">
            <div class="card h-100 border border-2 border-secondary shadow-sm"
                 style="transition: transform 0.3s ease-in-out;"
                 onmouseover="this.style.transform='scale(1.02)'"
                 onmouseout="this.style.transform='scale(1)'">
                <div class="card-body text-center">
                    <h2 class="card-title fw-bold">
                        <i class="fas fa-quote-left me-2"></i> Tech Inspiration
                    </h2>
                    <p><em>"@randomQuote"</em></p>
                    <button class="btn btn-secondary" @onclick="GenerateQuote" style="transition: background-color 0.3s ease;">
                        <i class="fas fa-sync-alt"></i> New Quote
                    </button>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- AI Chatbot Modal -->
@if (showChatbot)
{
    <div class="modal show d-block" tabindex="-1"
         style="background-color: rgba(0, 0, 0, 0.8);">
        <div class="modal-dialog">
            <div class="modal-content" style="border-radius: 10px;">
                <div class="modal-header">
                    <h5 class="modal-title">Chat with My AI</h5>
                    <button type="button" class="btn-close" @onclick="ToggleChatbot"></button>
                </div>
                <div class="modal-body">
                    <p>This chatbot can answer questions about my projects and skills!</p>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool showChatbot = false;
    private string userCode = "";
    private string codeOutput = "";
    private string randomQuote = "Technology is best when it brings people together.";

    private Dictionary<string, int> skills = new()
    {
        { "C#", 90 }, { "Blazor", 85 }, { "ASP.NET", 80 }
    };

    private void ToggleChatbot() => showChatbot = !showChatbot;
    private void GenerateQuote() => randomQuote = new[]
    {
        "Code is like humor.",
        "Simplicity is key.",
        "Fix the cause, not the symptom."
    }[new Random().Next(3)];
    private void RunCode() => codeOutput = userCode.Contains("Hello")
        ? "Output: Hello, world!"
        : "Simulated output.";
}
