<!-- Interactive Random Project Fact Section -->
<div class="container mb-5">
    <div class="card border border-2 border-secondary shadow-sm"
         style="transition: transform 0.3s ease-in-out; cursor: pointer;"
         onmouseover="this.style.transform='scale(1.02)';"
         onmouseout="this.style.transform='scale(1)';">
        <div class="card-body text-center">
            <h4 class="card-title fw-bold">Random Project Fact</h4>
            <p style="font-style: italic; font-family: 'Courier New', monospace; background-color: #f8f9fa; padding: 1rem; border-radius: 4px;">
                @ProjectFact
            </p>
            <button class="btn btn-secondary"
                    @onclick="ShowRandomProjectFact"
                    style="transition: background-color 0.3s ease;"
                    onmouseover="this.style.backgroundColor='#e9f5ff';"
                    onmouseout="this.style.backgroundColor='';">
                Show Random Fact
            </button>
        </div>
    </div>
</div>

@code {
    private string ProjectFact = "Click the button to learn something cool about these projects!";
    private readonly string[] projectFacts = new[]
    {
        "This project was built using the latest .NET 6 features!",
        "Advanced C programming techniques power the client-server model.",
        "Cross-platform compatibility ensures the app runs seamlessly on multiple devices.",
        "Integration of C libraries with .NET MAUI demonstrates powerful interoperability.",
        "Modular design and robust error handling are key highlights of these projects.",
        "Agile methodologies and CI/CD pipelines streamline the development process."
    };

    private void ShowRandomProjectFact()
    {
        var random = new Random();
        ProjectFact = projectFacts[random.Next(projectFacts.Length)];
    }
}
