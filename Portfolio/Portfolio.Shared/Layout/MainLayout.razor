<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <!-- Existing LinkedIn Link -->
            <a href="https://www.linkedin.com/in/mrrealestate0101/" target="_blank" class="me-3">
                <i class="fab fa-linkedin" style="font-size: 1.5rem; color: #0077B5;"></i> LinkedIn
            </a>
            <!-- New GitHub Link -->
            <a href="https://github.com/gvega001" target="_blank">
                <i class="fab fa-github" style="font-size: 1.5rem; color: #333;"></i> GitHub
            </a>
        </div>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

